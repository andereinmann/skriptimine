#!/bin/bash
#
# Skript idee seisneb selles, et kasutaja sisestab kuu numbri (1.12) ning see leiab, millise selle numbrile vastava kuu nimega on tegemist.

#Kasutajalt k체sitakse andmeid
echo -n "Sisesta kuu number (1..12): "
read kuu

#Skript leiab kuu
case $kuu in
"1") echo "See on jaanuar";;
"2") echo "See on veebruar";;
"3") echo "See on m채rts";;
"4") echo "See on aprill";;
"5") echo "See on mai";;
"6") echo "See on juuni";;
"7") echo "See on juuli";;
"8") echo "See on august";;
"9") echo "See on september";;
"10") echo "See on oktoober";;
"11") echo "See on november";;
"12") echo "See on detsember";;

*) echo "Vigane sisend";; #<- Juhul, kui on skripti sisestatud tundmatu s체mbol, sisestatakse see lause

esac

